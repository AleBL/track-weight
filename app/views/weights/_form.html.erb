<%= form_with(model: weight, local: true) do |form| %>
  <% if weight.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(weight.errors.count, "error") %><%= t('error.saved') %> </h2>
      <ul>
        <% weight.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="field">
      <%= form.label t('weight.value') %>
      <%= form.number_field :value, step: 0.1 %>
    </div>

    <div class="field">
      <%= form.label t('weight.unity') %>
      <%= form.select(:unity, Weight.unities.keys.map {|unity| [unity.titleize, unity]}) %>
    </div>

    <div class="field">
      <%= form.label t('weight.registration_date') %>
      <%= form.date_field :registration_date %>
    </div>

    <div class="actions">
      <%= form.submit t('weight.create'), class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
