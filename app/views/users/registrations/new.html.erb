<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form">
    <h3>Sign up</h3>

    <div class="field">
      <%= f.label t('user.name') %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label t('user.height') %><br />
      <%= f.number_field :height, step: 0.01 %>
    </div>

    <div class="field">
      <%= f.label t('user.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t('user.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('characters_minimum') %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label t('user.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('sign_up'), class: 'btn btn-success' %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
