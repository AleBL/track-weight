<h1><%= t('diet.name') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('diet.initial_date') %></th>
      <th><%= t('diet.end_date') %></th>
      <th><%= t('weight.initial') %></th>
      <th><%= t('weight.ideal') %></th>
      <th><%= t('action.name') %></th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= diet.initial_date.strftime("%m/%d/%Y") %></td>
        <td><%= diet.end_date.strftime("%m/%d/%Y") %></td>
        <td><%= diet.initial_weight.label %></td>
        <td><%= diet.ideal_weight.label %></td>
        <td><button class="btn btn-primary"><%= link_to t('action.show'), diet %></button></td>
        <td><button class="btn btn-primary"><%= link_to t('action.edit'), edit_diet_path(diet) %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-primary">
  <%= link_to t('diet.new'), new_diet_path %>
</button>
